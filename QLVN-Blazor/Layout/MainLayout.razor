@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Web
@inject IJSRuntime JS
<div id="pcoded" class="pcoded">
    <div class="pcoded-overlay-box"></div>
    <div class="pcoded-container navbar-wrapper">
        <TopBar />
        <div class="pcoded-main-container">
            <div class="pcoded-wrapper">
                <NavMenu />
                <div class="pcoded-content">
                    <div class="pcoded-inner-content">
                        <div class="main-body">
                            <div class="page-wrapper">
                                <div class="page-body">
                                    @Body
                                </div>

                                
                               
                              
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>

        </div>
    </div>
    <SettingTheme />
</div>


@code {
    private bool isLoaderHidden = false; // Flag để tránh duplicate hide

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Hide loader sau mỗi render (global, cross-route)
        if (!isLoaderHidden)
        {
            try
            {
                // Delay nhỏ để đảm bảo DOM ready
                await Task.Delay(500);

                // Gọi JS hideLoader nếu adminAssetManager tồn tại
                await JS.InvokeVoidAsync("adminAssetManager.hideLoader");

                // Fallback: Hide bằng CSS nếu JS fail
                await JS.InvokeVoidAsync("eval",
                    "$('.theme-loader').fadeOut('slow').addClass('d-none');");

                isLoaderHidden = true;
                Console.WriteLine("Global loader hidden in MainLayout.");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error hiding loader in MainLayout: {ex.Message}");
                // Fallback CSS hide
                await JS.InvokeVoidAsync("eval",
                    "$('.theme-loader').hide();");
            }
        }

        // Re-init theme plugins nếu cần (từ previous fix)
        await JS.InvokeVoidAsync("initCustomPlugins");
    }

    public void Dispose()
    {
        // Cleanup nếu cần (e.g., event subscriptions)
    }
}