@using QLVN_Contracts.Dtos.User
@using QLVN_Contracts.Dtos.Group
@using QLVN_Blazor.Models
@inject IJSRuntime JS

<!-- Add/Edit User Modal -->
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" data-backdrop="static" style="z-index: 1050;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(IsEditMode ? "Chỉnh sửa người dùng" : "Thêm người dùng mới")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="CloseModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="UserModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tên <span class="text-danger">*</span></label>
                                <InputText @bind-Value="UserModel.Name" class="form-control" placeholder="Nhập tên người dùng" />
                                <ValidationMessage For="@(() => UserModel.Name)" class="text-danger" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tên đăng nhập <span class="text-danger">*</span></label>
                                @if (IsEditMode)
                                {
                                    <InputText @bind-Value="UserModel.UserName" class="form-control" placeholder="Nhập tên đăng nhập" disabled />
                                }
                                else
                                {
                                    <InputText @bind-Value="UserModel.UserName" class="form-control" placeholder="Nhập tên đăng nhập" />
                                }
                                <ValidationMessage For="@(() => UserModel.UserName)" class="text-danger" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <InputText @bind-Value="UserModel.Email" class="form-control" placeholder="Nhập email" />
                                <ValidationMessage For="@(() => UserModel.Email)" class="text-danger" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Điện thoại</label>
                                <InputText @bind-Value="UserModel.Phone" class="form-control" placeholder="Nhập số điện thoại" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Giới tính</label>
                                <InputSelect @bind-Value="UserModel.Gender" class="form-control">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="1">Nam</option>
                                    <option value="0">Nữ</option>
                                </InputSelect>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nhóm <span class="text-danger">*</span></label>
                                <InputSelect @bind-Value="UserModel.GroupId" class="form-control">
                                    <option value="">-- Chọn nhóm --</option>
                                    @if (Groups != null)
                                    {
                                        @foreach (var group in Groups)
                                        {
                                            <option value="@group.Id">@group.Name (@group.Id)</option>
                                        }
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => UserModel.GroupId)" class="text-danger" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>CMND/CCCD</label>
                                <InputText @bind-Value="UserModel.Cmnd" class="form-control" placeholder="Nhập CMND/CCCD" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Trạng thái</label>
                                <InputSelect @bind-Value="UserModel.RowStatus" class="form-control">
                                    <option value="1">Hoạt động</option>
                                    <option value="0">Ngừng hoạt động</option>
                                </InputSelect>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <InputTextArea @bind-Value="UserModel.Address" class="form-control" rows="2" placeholder="Nhập địa chỉ" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Ghi chú</label>
                                <InputTextArea @bind-Value="UserModel.Note" class="form-control" rows="2" placeholder="Nhập ghi chú" />
                            </div>
                        </div>
                    </div>
                    @if (!IsEditMode)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mật khẩu <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" placeholder="Nhập mật khẩu"
                                           @bind="PasswordValue" @bind:event="oninput" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Xác nhận mật khẩu <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" placeholder="Xác nhận mật khẩu"
                                           @bind="ConfirmPasswordValue" @bind:event="oninput" />
                                </div>
                            </div>
                        </div>
                    }
                </EditForm>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="CloseModal">
                    <i class="feather icon-x"></i> Đóng
                </button>
                <button type="button" class="btn btn-primary" @onclick="HandleSubmit" disabled="@IsProcessing">
                    @if (IsProcessing)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                        <span>Đang xử lý...</span>
                    }
                    else
                    {
                        <i class="feather icon-save"></i>
                        <span>@(IsEditMode ? "Cập nhật" : "Thêm mới")</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" style="z-index: 1050;">
    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 450px;">
        <div class="modal-content">
            <div class="modal-header bg-danger" style="padding: 15px 20px;">
                <h5 class="modal-title text-white" style="font-size: 18px;">
                    <i class="feather icon-alert-triangle" style="margin-right: 8px;"></i> Xác nhận xóa
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close" @onclick="CloseDeleteModal" style="opacity: 1;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center" style="padding: 35px 30px;">
                <i class="feather icon-trash-2 text-danger" style="font-size: 72px; display: block; margin-bottom: 20px;"></i>
                <p style="font-size: 16px; margin-bottom: 8px; color: #555;">Bạn có chắc chắn muốn xóa người dùng:</p>
                <p style="font-size: 20px; font-weight: 700; color: #333; margin: 15px 0; padding: 10px; background: #f8f9fa; border-radius: 6px;">
                    @(string.IsNullOrEmpty(DeleteUserName) ? "---" : DeleteUserName)
                </p>
                <p class="text-muted" style="font-size: 13px; margin-bottom: 0;">
                    <i class="feather icon-info" style="margin-right: 5px;"></i>
                    Hành động này không thể hoàn tác!
                </p>
            </div>
            <div class="modal-footer justify-content-center" style="padding: 20px 30px 25px; border-top: 1px solid #eee;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="CloseDeleteModal" style="min-width: 110px; padding: 10px 25px;">
                    <i class="feather icon-x"></i> Hủy
                </button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@IsProcessing" style="min-width: 110px; padding: 10px 25px;">
                    @if (IsProcessing)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                        <span>Đang xóa...</span>
                    }
                    else
                    {
                        <i class="feather icon-trash-2"></i>
                        <span>Xóa</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public UserFormModel UserModel { get; set; } = new();
    [Parameter] public bool IsEditMode { get; set; }
    [Parameter] public bool IsProcessing { get; set; }
    [Parameter] public string DeleteUserId { get; set; } = string.Empty;
    [Parameter] public string DeleteUserName { get; set; } = string.Empty;
    [Parameter] public List<GroupDto>? Groups { get; set; }

    // Two-way binding cho Password
    [Parameter] public string Password { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> PasswordChanged { get; set; }

    [Parameter] public string ConfirmPassword { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> ConfirmPasswordChanged { get; set; }

    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    // Local values để bind với input
    private string PasswordValue
    {
        get => Password;
        set
        {
            if (Password != value)
            {
                Password = value;
                PasswordChanged.InvokeAsync(value);
            }
        }
    }

    private string ConfirmPasswordValue
    {
        get => ConfirmPassword;
        set
        {
            if (ConfirmPassword != value)
            {
                ConfirmPassword = value;
                ConfirmPasswordChanged.InvokeAsync(value);
            }
        }
    }

    private async Task HandleSubmit()
    {
        await OnSubmit.InvokeAsync();
    }

    private async Task ConfirmDelete()
    {
        await OnDelete.InvokeAsync();
    }

    private async Task CloseModal()
    {
        await OnClose.InvokeAsync();
    }

    private async Task CloseDeleteModal()
    {
        await JS.InvokeVoidAsync("eval", "$('#deleteUserModal').modal('hide')");
    }
}