@page "/users"
@using QLVN_Contracts.Dtos.User
@using QLVN_Blazor.Services
@using Microsoft.AspNetCore.Components.Forms
@inject AuthenticationStateProvider AuthStateProvider
@using Microsoft.AspNetCore.Components.Authorization
@inject UserApiClient UserService
@inject NotificationService NotificationService
@inject IJSRuntime JS
@implements IDisposable


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Danh sách người dùng</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option">
                        <li><i class="feather icon-maximize full-card"></i></li>
                        <li><i class="feather icon-minus minimize-card"></i></li>
                    </ul>
                </div>
            </div>

            <div class="card-block">
                @if (isLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Đang tải dữ liệu...</p>
                    </div>
                }
                else if (allUsers == null || !allUsers.Any())
                {
                    <div class="alert alert-info">
                        <strong>Thông báo:</strong> Không có dữ liệu người dùng.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table id="userDataTable" class="table table-striped table-hover table-bordered" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th>Id</th>
                                    <th>Nhóm</th>
                                    <th>Tên</th>
                                    <th>Giới tính</th>
                                    <th>Tên đăng nhập</th>
                                    <th>Email</th>
                                    <th>Điện thoại</th>
                                    <th>CMND/CCCD</th>
                                    <th>Địa chỉ</th>
                                    <th>Hình ảnh</th>
                                    <th>Ghi chú</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th>Người tạo</th>
                                    <th>Ngày cập nhật</th>
                                    <th>Người cập nhật</th>
                                    <th style="width: 120px;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in allUsers)
                                {
                                    <tr data-user-id="@user.Id">
                                        <td>@user.Id</td>
                                        <td>@user.GroupId</td>
                                        <td>@user.Name</td>
                                        <td>
                                            @if (user.Gender == 1)
                                            {
                                                <span class="badge bg-primary">Nam</span>
                                            }
                                            else if (user.Gender == 0)
                                            {
                                                <span class="badge bg-info">Nữ</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Không xác định</span>
                                            }
                                        </td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>@user.Phone</td>
                                        <td>@user.Cmnd</td>
                                        <td>@user.Address</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.Image))
                                            {
                                                <img src="@user.Image" alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%;" />
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@user.Note</td>
                                        <td>
                                            @if (user.RowStatus == 1)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Ngừng hoạt động</span>
                                            }
                                        </td>
                                        <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@user.CreatedBy</td>
                                        <td>@user.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@user.UpdatedBy</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning me-1" title="Chỉnh sửa">
                                                <i class="feather icon-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger" title="Xóa">
                                                <i class="feather icon-trash-2"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@code {
    private List<UserDto>? allUsers;
    private bool isLoading = true;
    private bool dataTableInitialized = false;
    private bool layoutInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        isLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {

        if (allUsers?.Any() == true && !layoutInitialized)
        {
            layoutInitialized = true;

            // 1. Đóng sidebar customizer (BỎ visibility = hidden)
            await JS.InvokeVoidAsync("eval", @"
                var styleSelector = document.getElementById('styleSelector');
                if (styleSelector) {
                    styleSelector.classList.remove('open');
                }
            ");

            // 2. Re-load các script layout chính của Adminty
            await JS.InvokeVoidAsync("eval", "if (typeof $.getScript === 'function') $.getScript('js/pcoded.min.js');");
            await JS.InvokeVoidAsync("eval", "if (typeof $.getScript === 'function') $.getScript('js/vartical-layout.min.js');");
            await JS.InvokeVoidAsync("eval", "if (typeof $.getScript === 'function') $.getScript('js/script.js');");

            // 3. Đợi layout re-init xong rồi mới init DataTables
            await Task.Delay(300);

            if (!dataTableInitialized)
            {
                await JS.InvokeVoidAsync("initUserDataTable", "#userDataTable");
                dataTableInitialized = true;
            }
        }
    }

    private async Task LoadData()
    {
        allUsers = await UserService.GetUserAllSync();

        if (dataTableInitialized)
        {
            await JS.InvokeVoidAsync("reinitUserDataTable", "#userDataTable");
        }

        StateHasChanged();
    }

    public void Dispose()
    {
        if (dataTableInitialized)
        {
            _ = JS.InvokeVoidAsync("destroyUserDataTable", "#userDataTable");
        }
    }
}