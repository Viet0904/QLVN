@page "/users"
@using QLVN_Contracts.Dtos.User
@using QLVN_Blazor.Services
@inject UserApiClient UserService
@inject IJSRuntime JS
@implements IDisposable

<h3>Danh sách người dùng</h3>

@if (allUsers == null)
{
    <p>Đang tải dữ liệu...</p>
}
else if (allUsers.Count == 0)
{
    <p>Không có dữ liệu người dùng.</p>
}
else
{
    <table id="myTable" class="display table table-striped table-hover" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in allUsers)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => OpenEditModal(user.Id)">Sửa</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(user.Id)">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<UserDto>? allUsers;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && allUsers?.Count > 0)
        {
            await JS.InvokeVoidAsync("initDataTable", "#myTable");


            await JS.InvokeVoidAsync("adminAssetManager.hideLoader");
        }
    }

    private async Task LoadData()
    {
        allUsers = (await UserService.GetUserAllSync())?.ToList() ?? new();
        StateHasChanged(); // Đảm bảo render lại
    }

    // Khi xóa xong, reload dữ liệu và khởi tạo lại DataTable
    private async Task ConfirmDelete(string id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Bạn có chắc chắn muốn xóa người dùng này?");
        if (confirmed)
        {
            await UserService.DeleteAsync(id);
            await LoadData();

            // Re-init DataTable sau khi bảng được render lại
            await JS.InvokeVoidAsync("reinitDataTable", "#myTable");
        }
    }

    private void OpenEditModal(string id)
    {
        // Logic mở modal edit
    }

    public async void Dispose()
    {
        await JS.InvokeVoidAsync("destroyDataTable", "#myTable");
    }
}